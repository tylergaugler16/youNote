
<h1 class="left-header"> Edit Profile </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :bio %>
      <%= f.text_area :bio, value: @user.bio , rows: 10, class: 'form-control' %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>