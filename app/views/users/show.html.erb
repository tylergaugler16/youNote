<div class="container-fluid">
	


<div class="row user_info">
	<div class="col-md-3">
		<div class= "container-fluid profile-picture">
				<%= gravatar_for @user %>
  		</div>
  		<p><%= @user.email %></p>
	</div>
	<div class="col-md-6">
			<h1> <%= @user.name %> </h1>

			<div class="top_notes container-fluid">
				  <div class="panel panel-default">
				    <div class="panel-heading">
				    	<span class="left">Top Notes</span>
				    	<span class="right">Number of Notes: <%= @user.notes.size %> </span>
				    </div>
				    <% @top_notes.each do |note| %>
				    	<div class="panel-body"> <%= link_to note.title, note %> </div>
				    <% end %>
				  </div>
			</div>
	</div>	
</div>




</div>