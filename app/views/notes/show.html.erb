<div class="note_container">
	<div class="video ">

		 <h2><%= @note_video.title %></h2>
		<div class="show-video-container container-fluid">
			<iframe width="640" height="360" src="https://www.youtube.com/embed/<%= @note_video.id %>" frameborder="0" allowfullscreen></iframe>
		</div>
		<div class="description container-fluid">
			<%= @note_video.description %>
		</div>
		
	</div>


	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	  	<%= form_for (@note), :url => {:controller => "notes", :action => "update" } do |f| %>
	      <%= f.label :title %>
	      <%= f.text_field :title, class: 'form-control', value: @note.title %>

	      <%= f.label :content %>
	      <%= f.text_area :content, class: 'form-control'%>
		<% end %>
	  </div>
	</div>

</div>