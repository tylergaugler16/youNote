<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@note) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', value: params[:title] %>

      <%= f.hidden_field :user_id, class: 'form-control', value: current_user.id  %>
      <%= f.hidden_field :content_item_id, class: 'form-control', value: params[:content_item_id]  %>
      <%= f.hidden_field :public, class: 'form-control', value: 'false' %>

      <%= f.submit "Create my Note", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>