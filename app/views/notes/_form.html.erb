<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@note) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', value: params[:title] %>

      <% f.text_field :user_id, class: 'form-control', value: current_user  %>

      <%= f.submit "Create my Note", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>